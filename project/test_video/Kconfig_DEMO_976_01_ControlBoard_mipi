#
# For a description of the syntax of this configuration file,
# see Documentation/kbuild/kconfig-language.txt.
#

mainmenu "Project Configuration"

config TEST_VIDEO
    bool
    default y
    select HAVE_LCD
    select HAVE_GRAPHICS
    select HAVE_VIDEO
    select HAVE_AUDIO

config CMAKE_SOURCE_DIR
    string
    option env="CMAKE_SOURCE_DIR"

config DEF_CHIP_PKG_IT976
    def_bool y

config DEF_CHIP_REV_A0
    def_bool y

config RAM_SIZE
    default "0x4000000"

config RAM_INIT_SCRIPT
    default "IT970A0_396Mhz_DDR2_396Mhz.scr"

config LCD_ENABLE
    def_bool y

config LCD_WIDTH
    default "1024"

config LCD_HEIGHT
    default "600"

config LCD_PITCH
    default "2048"

config LCD_INIT_SCRIPT
    default "it970_lcd_joyangit_1024_600_24bits_mipi_128pin_rot180.txt"

config BACKLIGHT_ENABLE
    def_bool y

config BACKLIGHT_DUTY_CYCLES
    default "5, 25, 40, 55, 65, 75, 82, 88, 92, 95"

config BACKLIGHT_DEFAULT_DUTY_CYCLE
    default "95"

config GPIO_BACKLIGHT_PWM
     default "95"

config CMDQ_ENABLE
    def_bool y

config JPEG_HW_ENABLE
    def_bool y

config M2D_ENABLE
    def_bool y

config UART1_ENABLE
    def_bool y

config GPIO_UART1_TX
    default "4"

config GPIO_UART1_RX
    default "-1"

config DEF_DBG_UART1
    def_bool y

config DBG_INIT_SCRIPT
    default "IT970A0_396Mhz_DDR2_396Mhz.txt"

config BUILD_FFMPEG
    def_bool y

config VIDEO_ENABLE
    def_bool y

config STC_ENABLE
    def_bool y

config FS_FAT
    def_bool y

config ITU_UCL_ENABLE
    def_bool y

config BUILD_INIPARSER
    def_bool y

config BUILD_ITU
    def_bool y

config BUILD_SDL
    def_bool y

config USB0_ENABLE
    def_bool y

config USB1_ENABLE
    def_bool y

config MSC_ENABLE
    def_bool y

config TASK_DRIVE_PROBE
    def_bool y

config I2S_ENABLE
    def_bool n

config I2S_OUTPUT_PIN_ENABLE
    def_bool n

config I2S_SPDIF_ENABLE
    def_bool n

config RECORD_VIDEO
    def_bool y

source "$CMAKE_SOURCE_DIR/sdk/Kconfig"

menu "Test H.264 / Mjpeg"

    choice
        prompt "Test H.264 / Mjpeg"
        default TEST_CONTAINER

    config TEST_ELEMENTARY
        bool "ElementaryStream format (h264, 264, etc)"

    config TEST_CONTAINER
        bool "Container format (MKV, MP4, etc)"

    config TEST_MJPEG
        bool "Container format (AVI)"

    #config TEST_GOLDEN
    #    bool "Golden bitstream file format (bmp)"

    endchoice

endmenu
